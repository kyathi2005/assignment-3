#include<stdio.h>
    int main(){
                   int n, ele, i, h;
                   printf(" How many Integer numbers : ");
                   scanf("%d", &n);
                   h=n;
                   if(n>0){
                   printf("\n Enter the First number : ");
                   scanf("%d", &ele);
                   n--;
                   if(n>0){
                   for(;n>=1; n--){
                   printf("\n Enter the next number : ");
                   scanf("%d", &i);
                   if(ele>i)
                   ele=i;
                   }
                   }
                   }
    printf("\n The Lowest of %d numbers is %d", h, ele);
    return(0);
    }
